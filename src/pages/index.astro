---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Timeline from "../components/Timeline.astro";
import Intro from "../components/Intro.astro";
import Projects from "../components/Projects";
---

<Layout title="Boris Tsao - Actuary">
  <main class="font-roboto">
    <Header />

    <div id="first-section" class="h-screen text-gray-700">
      <Intro />
      <div class="custom-shape-divider-bottom-1663995881">
        <svg
          data-name="Layer 1"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 1200 120"
          preserveAspectRatio="none"
        >
          <path
            d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z"
            class="shape-fill"></path>
        </svg>
      </div>
    </div>

    <div class="h-screen bg-white">
      <Timeline />
    </div>

    <div class="h-screen bg-white">
      <div
        class="mt-20 mx-auto max-w-6xl justify-start sm:px-6 lg:px-8 flex flex-col items-center"
      >
        <div class="relative z-0 mb-5">
          <p class="text-gray-200 text-9xl mt-10 text-center font-extrabold">
            Side Projects
          </p>
          <div
            class="absolute inset-x-0 bottom-0 flex justify-center items-center z-10"
          >
            <p class="text-4xl text-gray-600 font-bold">
              What I have been up to outside of work
            </p>
          </div>
        </div>
        <p class="text-gray-600 mb-5 w-3/4 text-center">
          Below are a few projects that I am working on to test out bleeding
          edge technologies.
        </p>
        <div class="flex flex-col w-full">
          <Projects />
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  #first-section {
    background-image: url("../assets/wallpaper.jpg");
    background-size: cover;
    background-position: center;
  }
  .custom-shape-divider-bottom-1663995881 {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    overflow: hidden;
    line-height: 0;
    transform: rotate(180deg);
  }

  .custom-shape-divider-bottom-1663995881 svg {
    position: relative;
    display: block;
    width: calc(100% + 1.3px);
    height: 192px;
    transform: rotateY(180deg);
  }

  .custom-shape-divider-bottom-1663995881 .shape-fill {
    fill: #ffffff;
  }
</style>
