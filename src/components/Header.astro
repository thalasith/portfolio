---
import { Image } from "@astrojs/image/components";
import heroImage from "../assets/pfp.png";
---

<!-- This example requires Tailwind CSS v2.0+ -->
<header class="fixed w-full transition-all duration-400" id="header">
  <nav class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8" aria-label="Top">
    <div class="flex w-full items-center justify-between py-2 lg:border-none">
      <div class="flex items-center">
        <a class="flex" href="">
          <Image
            src={heroImage}
            width={50}
            class="rounded-3xl border-gray-500 border-2"
            alt="descriptive text"
          />
          <span class="lg:ml-2 mt-4 text-xl">
            Hello there, my name is Boris. &#128075;</span
          >
        </a>
      </div>
      <div class="ml-10 space-x-4 hidden lg:block">
        <a href="#" class="">Home Page</a>
        <a href="#" class="">Resume</a>
        <a href="#" class="">Projects</a>

        <a
          href="#"
          class="inline-block rounded-md border-2 py-2 px-4 text-base font-medium hover:bg-indigo-50"
          >Contact</a
        >
      </div>
    </div>
    <div class="flex flex-wrap justify-center space-x-6 py-4 lg:hidden">
      <a href="#" class="text-base font-medium text-white hover:text-indigo-50"
        >Home Page</a
      >

      <a href="#" class="text-base font-medium text-white hover:text-indigo-50"
        >Resume</a
      >

      <a href="#" class="text-base font-medium text-white hover:text-indigo-50"
        >Projects</a
      >

      <a href="#" class="text-base font-medium text-white hover:text-indigo-50"
        >Contact</a
      >
    </div>
  </nav>
</header>

<style>
  #header {
    z-index: 1;
  }
</style>

<script>
  console.log(document.getElementById("header")!.style);
  window.onscroll = function () {
    {
      window.pageYOffset === 0
        ? (document.getElementById("header")!.style.backgroundColor =
            "transparent")
        : (document.getElementById("header")!.style.backgroundColor =
            "rgb(55,65,81)");
    }
    {
      window.pageYOffset === 0
        ? (document.getElementById("header")!.style.color = "rgba(55,65,81,1)")
        : (document.getElementById("header")!.style.color = "white");
    }
  };
</script>
